                <link rel="stylesheet" href="{{ asset('css/slicknav.min.css') }}" type="text/css">
                <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css">
                <link rel="stylesheet" href="{{ asset('css/dataTables.bootstrap4.min.css') }}">
                <link rel="stylesheet" href="{{ asset('css/jquery.dataTables.min.css') }}">
                <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        {% endblock %}

    </head>
    <body>
    {# {{ dump(dataserve.getBooks)}} #}

        <div class="container">
            <div class="inner-header">
                <div class="row">
                    <!-- LOGO a droite -->
                    <div class="col-lg-2 col-md-2">
                        <div class="logo">
                                <a href="{{ path('main') }}">
                                <img src="{{ asset('img/logo_gave.png') }}" alt="">
                            </a>
                        </div>
                    </div>
                    <!-- Barre de recherche -->
                    <div class="col-lg-7 col-md-7">
                        <div class="advanced-search">
                            {# <button type="button" class="category-btn">Catégories</button> #}
                    
                            {# <div class="category-select">
                                <ul class="category-list">
                                    <li class="active"><a href="#">Women’s Clothing</a></li>
                                    <li><a href="#">Men’s Clothing</a></li>
                                    <li><a href="#">Underwear</a></li>
                                    <li><a href="#">Kid's Clothing</a></li>
                                    <li><a href="#">Brand Fashion</a></li>
                                    <li><a href="#">Accessories/Shoes</a></li>
                                    <li><a href="#">Luxury Brands</a></li>
                                    <li><a href="#">Brand Outdoor Apparel</a></li>
                                </ul>
                            </div> #}
                            <div class="custom-select category-btn" style="width: 200px;">
                                <select>
                                    <option value="0">Catégorie</option>
                                    {% for categorie in dataserve.getCategories %}
                                        <option value="{{ categorie.id }}">{{ categorie.label }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="input-group">
                                <input type="text" placeholder="Qu'est-ce que vous souhaitez lire ?">
                                <button type="button"><i class="ti-search"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 text-right col-md-3">
                        <ul class="nav-right">
                            <!-- Liste envie -->
                            <li class="heart-icon">
                                <a href="{{ path('wish') }}">
                                    <i class="icon_heart_alt"></i>
                                    <span>1</span>
                                </a>
                            </li>
                            <!-- Panier -->
                            <li class="cart-icon">
                                <a href="#">
                                    <i class="icon_cart"></i>
                                    <span>3</span>
                                </a>
                                <div class="cart-hover">
                                    <div class="select-items">
                                        <table>
                                            <tbody>
                                            <tr>
                                                <td class="si-pic"><img src="{{ asset('img/select-product-1.jpg') }}" alt=""></td>
                                                <td class="si-text">
                                                    <div class="product-selected">
                                                        <p>$60.00 x 1</p>
                                                        <h6>Kabino Bedside Table</h6>
                                                    </div>
                                                </td>
                                                <td class="si-close">
                                                    <i class="ti-close"></i>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="si-pic"><img src="{{ asset('img/select-product-2.jpg') }}" alt=""></td>
                                                <td class="si-text">
                                                    <div class="product-selected">
                                                        <p>$60.00 x 1</p>
                                                        <h6>Kabino Bedside Table</h6>
                                                    </div>
                                                </td>
                                                <td class="si-close">
                                                    <i class="ti-close"></i>
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="select-total">
                                        <span>total:</span>
                                        <h5>$120.00</h5>
                                    </div>
                                    <div class="select-button">

                                        <a href="{{ path('cart') }}" class="primary-btn view-card">VIEW CARD</a>
                                        <a href="{{ path('checkout') }}" class="primary-btn checkout-btn">CHECK OUT</a>
                                    </div>
                                </div>
                            </li>
                            <!-- Login -->
                            <li class="heart-icon">
                                <a href="{{ path(app.user ? 'account' : 'login') }}">
                                    <i class="fa fa-user"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="nav-item">
            <div class="container">
                <nav class="nav-menu mobile-menu">
                    <ul>
                        <li class="active"><a href="{{ path('main') }}">Accueil</a></li>
                        <li><a href="{{ path('shop') }}">Magasin</a></li>
                        <li><a href="{{ path('form_contact') }}">Contact</a></li>
                        {#<li><a href="{{ path('product') }}">Product</a></li>#}
                        {#<li><a href="{{ path('') }}">Check Out</a></li>#}
                        {#<li><a href="{{ path('') }}">Shopping Cart</a></li>#}
                    </ul>
                </nav>
                <div id="mobile-menu-wrap"></div>
            </div>
        </div>
      
        {% block body %}
        {% endblock %}

