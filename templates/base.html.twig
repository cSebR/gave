                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 offset-lg-1">
                            <div class="footer-widget">
                                <h5>Information</h5>
                                <ul>
                                    <li><a href="{{ path('form_contact') }}">Nous Contacter</a></li>
                                    <li><a href="#">Checkout</a></li>
