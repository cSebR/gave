{% extends 'base.html.twig' %}

{% block title %}CreditCard{% endblock %}

{% block body %}
    <h1>CreditCard</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ credit_card.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ credit_card.number }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ credit_card.name }}</td>
            </tr>
            <tr>
                <th>ExpirationMonth</th>
                <td>{{ credit_card.expirationMonth }}</td>
            </tr>
            <tr>
                <th>ExpirationYear</th>
                <td>{{ credit_card.expirationYear }}</td>
            </tr>
            <tr>
                <th>Cvv</th>
                <td>{{ credit_card.cvv }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('credit_card_index') }}">back to list</a>

    <a href="{{ path('credit_card_edit', {'id': credit_card.id}) }}">edit</a>

    {{ include('credit_card/_delete_form.html.twig') }}
