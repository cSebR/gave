{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h2></h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ligne1</th>
                <th>Ligne2</th>
                <th>Ligne3</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.ligne1 }}</td>
                <td>{{ address.ligne2 }}</td>
                <td>{{ address.ligne3 }}</td>
                <td>{{ address.PostalCode }}</td>
                <td>{{ address.city }}</td>
                <td>
                    <a href="{{ path('address_edit', {'id': address.id}) }}"
                       ><button class="btn btn-warning btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="fa fa-edit"></span></button>

                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <a href="{{ path('address_new') }}" class="site-btn place-btn">Create new</a>
    </div>
{% endblock %}
