{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ book.cover }}</td>
            </tr>
            <tr>
                <th>BackCover</th>
                <td>{{ book.backCover }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>PublishedDate</th>
                <td>{{ book.publishedDate ? book.publishedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NumberOfCopies</th>
                <td>{{ book.numberOfCopies }}</td>
            </tr>
            <tr>
                <th>PriceHT</th>
                <td>{{ book.priceHT }}</td>
            </tr>
            <tr>
                <th>PriceTTC</th>
                <td>{{ book.priceTTC }}</td>
            </tr>
            <tr>
                <th>DiscountAmount</th>
                <td>{{ book.discountAmount }}</td>
            </tr>
            <tr>
                <th>DiscountType</th>
                <td>{{ book.discountType }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            <tr>
                <th>NumberOfPages</th>
                <td>{{ book.numberOfPages }}</td>
            </tr>
            <tr>
                <th>Ranking</th>
                <td>{{ book.ranking }}</td>
            </tr>
            <tr>
                <th>ISBN10</th>
                <td>{{ book.ISBN10 }}</td>
            </tr>
            <tr>
                <th>ISBN13</th>
                <td>{{ book.ISBN13 }}</td>
            </tr>
            <tr>
                <th>ASIN</th>
                <td>{{ book.ASIN }}</td>
            </tr>
            <tr>
                <th>Dimention</th>
                <td>{{ book.dimention }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ book.weight }}</td>
            </tr>
            <tr>
                <th>IsAvailable</th>
                <td>{{ book.isAvailable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ book.createdAt ? book.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('book_index') }}">back to list</a>

    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
