            <div class="row">
                <div class="col-lg-3">
                    <div class="filter-widget">
                        <h4 class="fw-title">Categories</h4>
                        <ul class="filter-catagories">
                            {% for categorie in dataserve.getCategories %}
                                <li><a href="{{ categorie.id }}">{{ categorie.label }}</a></li>
