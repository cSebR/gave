                {#{% for book in dataserve.getBooks %}#}
                
                {% set selectedBook = book[0] %}

                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="product-pic-zoom">
                                <img class="product-big-img" src="{{ selectedBook.cover }}" alt="">
                                <div class="zoom-icon">
                                    <i class="fa fa-search-plus"></i>
                                </div>
                            </div>
                            <div class="product-thumbs">
                                <div class="product-thumbs-track ps-slider owl-carousel">
                                    <div class="pt active" data-imgbigurl="{{ selectedBook.cover }}"><img
                                                src="{{ selectedBook.cover }}" alt=""></div>
                                    <div class="pt" data-imgbigurl="{{ selectedBook.backCover }}"><img
                                                src="{{ selectedBook.backCover }}" alt=""></div>
                                </div>
                            </div>
                        </div>
                        {# {{ dump(book) }} #}
                        <div class="col-lg-6">
                            <div class="product-details">
                                <div class="pd-title">
                                    <span>{{ selectedBook.author[0].label }}</span>
                                    <h3>{{ selectedBook.title }}</h3>
                                    <a href="#" class="heart-icon"><i class="icon_heart_alt"></i></a>
                                </div>
                                <div class="pd-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o"></i>
                                    <span>(5)</span>
                                </div>
                                <div class="pd-desc">
                                    <p>{{ selectedBook.description }}</p>
                                    <h4>{{ selectedBook.priceTTC }}€</h4>
                                </div>
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input type="text" value="1">
                                    </div>
                                    <a href="{{ path('cart_add', { id: selectedBook.id }) }}" class="primary-btn pd-cart">Ajouter Panier</a>
                                </div>
                                <ul class="pd-tags">
                                    <li><span>CATEGORIE</span>: Science-Fiction{# {{ selectedBook.categorie }} #}</li>
                                    <li><span>TAGS</span>: SF, Roman, Aventure, Comedie</li>
                                </ul>
                                {# <div class="pd-share">
                                    {<div class="p-code">ISBN 13 : {{ selectedBook.isbn13 }}</div>
